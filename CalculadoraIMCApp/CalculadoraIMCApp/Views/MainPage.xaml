<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMCApp.Views.MainPage"
             Title="Calculadora IMC">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12" VerticalOptions="Center">
            <Label 
            Text="Calculadora de IMC"
            FontSize="25"
            HorizontalOptions="Center" />
            <Label Text="Peso (kg)" />
            <Entry Placeholder="Ej. 70" Keyboard="Numeric"
                   Text="{Binding WeightText, Mode=TwoWay}" />

            <Label Text="Altura (m o cm)" />
            <Entry Placeholder="Ej. 1.70 o 170" Keyboard="Numeric"
                   Text="{Binding HeightText, Mode=TwoWay}" />

            <Button Text="Calcular" Command="{Binding CalcularIMCCommand}" />

            <Label Text="{Binding Resultado}" FontAttributes="Bold" FontSize="18"
                   HorizontalOptions="Center" LineBreakMode="WordWrap" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>